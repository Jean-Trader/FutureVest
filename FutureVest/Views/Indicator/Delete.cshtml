@using Application.ViewModels.MacroIndicators
@model DeleteMacroIndicatorVM
@{
    ViewData["Title"] = "Borrar indicador";
}

<div class="col-12 col-md-9 offset-md-4">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4 class="text-center">
                ¿Estás seguro de que deseas eliminar el Indicador?
            </h4>
        </div>
        <div class="card-body">
            <form asp-controller="Indicator" asp-action="Delete" method="POST">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger me-2">Delete</button>
                    <a asp-controller="Indicator" asp-action="Index" class="btn btn-outline-warning">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
