@using Application.ViewModels.MacroIndicators
@model MacroIndicatorVM
@{

    bool editMode = ViewBag.EditMode ?? false;

    if (editMode == false)
    {
        ViewData["Title"] = "Agregar Macro Indicador";
    }
    else ViewData["Title"] = "Editar Macro Indicador";

}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}


<div class="col-14 col-md-4 offset-md-3 ">
    <div class="card">
        <div class="card-header bg-success text-bg-light"><h4 class="text-center">@(editMode ? "Editar Macro Indicador: " + Model.Name : "Agregar nuevo Macro Indicador")</h4></div>
        <div class="card-body">
            <form asp-controller="MacroIndicator" asp-action="@(editMode ? "Edit" : "Create")" method="POST" class="align-content-center">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nombre:</label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Weight" class="form-label">Peso:</label>
                    <input class="form-control" asp-for="Weight" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="HighBetter" class="form-label">Mas alto es mejor?:</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="HighBetter" value="true" id="highBetterYes" />
                        <label class="form-check-label" for="highBetterYes">Sí
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="HighBetter" value="false" id="highBetterNo" />
                        <label class="form-check-label" for="highBetterNo">No
                        </label>
                    </div>
                    <span asp-validation-for="HighBetter" class="text-danger"></span>
                </div>
 
                <div>
                    <button type="submit" class="btn btn-outline-dark float-end">guardar</button>
                    <a asp-controller="MacroIndicator" asp-action="Index" class="btn btn-outline-dark float-end me-2">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>